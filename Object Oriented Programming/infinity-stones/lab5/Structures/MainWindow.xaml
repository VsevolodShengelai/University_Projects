<Window x:Class="Structures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Structures"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="0,50,0,0" MinWidth="300">
            <Button x:Name="RunTests" Content="Run tests" Click="RunTests_Click" />
            <Label Name="passLabel" />
            <Label Name="failLabel" />
            <ListBox x:Name="reasonsList" />
        </StackPanel>
    </Grid>
</Window>
