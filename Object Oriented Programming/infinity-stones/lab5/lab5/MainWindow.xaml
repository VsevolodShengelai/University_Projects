<Window x:Class="lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="500">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ListBox Grid.Row="0" Grid.Column="0" x:Name="materials" SelectionChanged="selectionChanged" />
            <ListBox Grid.Row="0" Grid.Column="1" x:Name="crosssections" SelectionChanged="selectionChanged" />
            <ListBox Grid.Row="0" Grid.Column="2" x:Name="testresults" SelectionChanged="selectionChanged" />
        
            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" x:Name="outputLabel" />
        </Grid>
    </Grid>
</Window>
